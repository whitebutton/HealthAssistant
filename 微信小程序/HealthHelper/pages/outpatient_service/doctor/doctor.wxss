.doctorList {
  height: 100%;
  padding: 30rpx;
  background-color: rgb(245, 245, 245);
}

.doctorItem {
  background-color: white;
  margin-bottom: 30rpx;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border: 1rpx solid rgb(192, 192, 192);
  border-radius: 20rpx;
}

.doctorItem image {
  width: 150rpx;
  height: 150rpx;
}

.doctorText {
  width: 75%;
}

.doctorTitle {
  display: flex;
  align-items: center;
  margin: 0 20rpx 20rpx 0;
}

.name {
  font-size: 40rpx;
}

.qua {
  height: 40rpx;
  margin-left: 30rpx;
  background-color: rgb(253, 211, 211);
  color: rgb(255, 0, 0);
  padding: 0 10rpx 0 10rpx;
  font-size: 25rpx;
  border-radius: 20rpx;
  text-align: center;
  line-height: 40rpx;
}

.intrduct {
  color: gray;
}
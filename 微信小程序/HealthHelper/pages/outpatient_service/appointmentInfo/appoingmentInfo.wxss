.content {
  height: 100%;
  padding: 20rpx;
  background-color: rgb(245, 245, 245);
}

.appInfo {
  background-color: white;
  margin-bottom: 30rpx;
  padding: 30rpx 50rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  border: 1rpx solid rgb(192, 192, 192);
  border-radius: 20rpx;
}

.appInfoTitle {
  align-self: center;
  font-size: 40rpx;
}

.appInfo view {
  margin: 20rpx 0;
  display: flex;
}

.appTips {
  display: flex;
  justify-content: center;
}

.detialMoney {
  color: rgb(255, 125, 13);
}

.subButton {
  margin-top: 100rpx;
  background-color: rgb(91, 141, 240);
  color: white;
}
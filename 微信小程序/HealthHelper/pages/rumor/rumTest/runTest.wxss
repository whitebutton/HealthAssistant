.rumorContent{
  background-color:#B6CDFA;
  padding: 50rpx;
  height: 100%;
  min-height: 100%;
}
.textContent{
  background-color: white;
  border-radius: 50rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.textContent image{
  text-align: center;
  width: 500rpx;
  height: 450rpx;
  margin: 20rpx;
}
.testTitle{
  position: relative;
}
.isTrue{
  position: absolute;
  width: 300rpx;
  height: 300rpx;
  text-align: center;
  line-height: 300rpx;
  right: -100rpx;
  top: -200rpx;
  font-size: 150rpx;
  color: #8BC34A ;
  border:10rpx solid #8BC34A ;
  border-radius: 50%;
  padding: 20rpx;
}
.isFalse{
  position: absolute;
  width: 300rpx;
  height: 300rpx;
  text-align: center;
  line-height: 300rpx;
  right: -100rpx;
  top: -200rpx;
  font-size: 150rpx;
  color: rgb(255, 0, 0);
  border:10rpx solid rgb(255, 0, 0);
  border-radius: 50%;
  padding: 20rpx;
}
.buttonGroup{
  width: 100%;
  margin-top: 30rpx;
  display: flex;
  width: 100%;
  justify-content: space-around;
}
.buttonGroup :first-child{
  background-color: #2971FF;
  color: white;
  padding: 10rpx 50rpx;
  border-radius: 50rpx;
}
.buttonGroup :last-child{
  background-color:#FF2C2C;
  color: white;
  padding: 15rpx 50rpx;
  border-radius: 50rpx;
}
.answerContent{
  padding: 50rpx;
}
.lock{
  margin-top: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.lock :last-child{
  width: 200rpx;
  margin-left: 20rpx;
  font-size: 25rpx;
}
.lock image{
  width: 100rpx;
  height: 100rpx;
}
.answerButton{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.answerButton image{
  width: 100rpx;
  height: 100rpx;
}
.answerButton :first-child{
  display: flex;
  align-items: center;
}
.nextQuestion{
  background-color: #2971FF;
  color: white;
  padding: 10rpx 50rpx;
  border-radius: 50rpx;
}
.answerDec{
  padding: 20rpx;
}
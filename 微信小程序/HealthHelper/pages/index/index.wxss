.content {
  background-color: #F8F8F8;
  height: 100%;
  min-height: 100%;
}

.backGround {
  width: 100%;
  height: 500rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #5B8DF0;
}

.backImg {
  width: 200rpx;
  height: 200rpx;
  text-align: center;
  margin-bottom: 100rpx;
}

.chose {
  width: 80%;
  display: flex;
  flex-direction: column;
  margin: -120rpx 0 0 10%;
  border-radius: 20rpx;
  background-color: white;
  border: 1rpx solid rgb(194, 194, 194);
}

.choseContent {
  display: flex;
  flex-direction: column;
}

.choseItem {
  height: 100rpx;
  display: flex;
  justify-content: start;
  align-items: center;
  font-size: 30rpx;
  padding: 10rpx 30rpx;
}

.choseContent image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.brLine {
  height: 2rpx;
  width: 100%;
  background-color: rgb(194, 194, 194);
}
.starContent {
  height: 100%;
  min-height: 100%;
}

.startImg {
  width: 100%;
  height: 800rpx;
}

.login {
  height: 100%;
  width: 100%;
  background-color: #4267E1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.loginContent {
  background-color: white;
  margin:  50rpx;
  border-radius: 30rpx;
  display: flex;
  padding: 30rpx;
  flex-direction: column;
  justify-content: space-between;
  height: 120rpx;
}

.loingItem {
  display: flex;
}

.loingItem image {
  width: 50rpx;
  height: 50rpx;
}

.loingItem input {
  margin: 0 20rpx;
  flex: 1;
  border-bottom: 1rpx solid rgb(209, 209, 209);
}

.verif {
  padding: 5rpx 15rpx;
  color: white;
  background-color: #85B6FF;
  border-radius: 30rpx;
  margin-right: 20rpx;
}

.loginButton {
  width: 50%;
  text-align: center;
  color: white;
  background-color: #5B8DF0;
  padding: 20rpx 50rpx;
  border-radius: 50rpx;
  margin-bottom: 50rpx;
}
.titleName{
  color: white;
  font-size: 50rpx;
}